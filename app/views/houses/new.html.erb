<h2>This is the page to create a new house</h2>

<%= form_for(@house) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true%>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address, :required => true %>
  </p>
  <p>
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude, :required => false %>
  </p>
  <p>
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude, :required => false %>
  </p>
  <p>
    <%= f.submit 'Submit', :class => 'btn' %>
  </p>
<% end %>
